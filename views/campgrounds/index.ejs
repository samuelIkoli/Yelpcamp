    <h1>Campgrounds</h1>
    <div><a href="/campgrounds/new">Add campground</a></div>
    <ul>
        <% for (let campground of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=campground.images[0].url%>" alt="" class="img-fluid h-100 w-100">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=campground.title%>
                            </h5>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <p>
                                <%=campground.location%>
                            </p>
                            <a href="/campgrounds/<%=campground.id%>" class="btn btn-primary">View <%=campground.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <%}%>
    </ul>

    </body>

    </html>